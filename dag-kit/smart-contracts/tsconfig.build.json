{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/esm",
    "rootDir": "./src",

    // CRITICAL FIXES:
    "target": "ES2020", // Enables BigInt (100n) support
    "module": "esnext",
    "moduleResolution": "node", // Ensures packages like @account-kit are found
    "skipLibCheck": true, // Ignores the errors inside node_modules/ox
    "types": ["node"],
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test-d.ts",
    "**/*.spec.ts",
    "src/**/e2e-tests/**/*"
  ]
}
